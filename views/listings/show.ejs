<div class="container mt-5 mb-5 border-bottom " style="height: 550px;">
    <div class="content-heading mb-5">
        <h1 style="font-family: 'Pacifico', cursive; color: #fabebb;">
            Scoops of Magic, Happiness in Every Bite!
        </h1> 
    </div>
    <div class="d-flex gap-4">
        <% for( let listing of alllistings)  { %>
            <div class="product-card">
                <button class="top-left-btn">New</button>
                <div class="product-box">
                    <div class="product-box-inner">
                        <div class="product-image-container">
                            <img src="<%= listing.image.url %>" class="product-image" alt="Product Image">
                        </div>
                        <div class="card-content">
                            <h4 class="card-title"><%= listing.title %></h4>
                            <p class="card-subtitle"><%= listing.description%></p>
                        </div>
                    </div>
                </div>
            </div> 
        <% } %> 

    </div>
        
</div>
